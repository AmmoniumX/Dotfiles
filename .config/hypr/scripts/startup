# Start system services
exec-once = kstart5 kwalletd6
exec-once = hyprlock
exec-once = systemctl --user start hyprpolkitagent
# exec-once = mpd

# Start user desktop services
exec-once = hyprpaper
exec-once = nm-applet --indicator
exec-once = waybar
exec-once = mako --config "$HOME/.config/hypr/mako/config"
exec-once=~/.config/hypr/scripts/gtkthemes

# Start default apps
exec-once = [workspace 1 silent] firefox
exec-once = [workspace 2 silent] discord
exec-once = [workspace 2 silent] zapzap
exec-once = [workspace 3 silent] thunderbird
exec-once = [workspace 3 silent] steam
